article.main section.application {
    width: 940px;
    padding-bottom: 20px;
    margin: 40px auto 100px;
    background: #FFF;
    box-shadow: 0 1px 5px #CCCCCC;
}

article.main section.application h3 {
    padding: 40px 40px 30px;
    font-size: 30px;
    font-weight: bold;
}

article.main section.application form {
    width: 860px;
    padding: 30px 0 0;
    margin: 20px auto;
    border-top: 1px solid #EEE;
}

article.main section.application input {
    width: 320px;
    height: 60px;
    padding: 0 20px;
    margin: 0 20px 0 180px;
    font-size: 18px;
    border: 1px solid #CCC;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
    transition: border 0.2s linear 0s, box-shadow 0.2s linear 0s;
}

article.main section.application input:focus {
